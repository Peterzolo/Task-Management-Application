{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "types": [
      "node",
      "jest"  // Add jest here to make sure Jest types are included
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,  // Skip type checking of declaration files
    "allowSyntheticDefaultImports": true  // Allow synthetic default imports for modules
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".templates",
    "node_modules"
  ],
  "files": []
}
